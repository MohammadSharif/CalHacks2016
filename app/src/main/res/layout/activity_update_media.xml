<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mohammadsharif.com.intersect.UpdateMediaActivity"
                android:background="#292D36">

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/com_facebook_share_button_text_color"/>

    <ImageButton
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="55dp"
        android:id = "@+id/facebook_button"
        android:src = "@drawable/facebooklogo"
        android:background="@android:color/transparent"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_width="100dp"
        android:layout_height = "100dp"/>

    <ImageButton

        android:layout_marginRight="25dp"
        android:layout_marginTop="55dp"
        android:id = "@+id/linkedin_button"
        android:src = "@drawable/linkedinlogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_height="100dp"
        android:layout_width="100dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop = "100dp"
        android:id = "@+id/instagram_button"
        android:src = "@drawable/instagramlogo"
        android:background="@android:color/transparent"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_below="@+id/facebook_button"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop = "100dp"
        android:id = "@+id/twitter_button"
        android:src = "@drawable/twitterlogo"
        android:background="@android:color/transparent"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_below="@+id/linkedin_button"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>

/////////////////////////////////////////////////////////////////////////////////////////
    <Button
        android:id ="@+id/push_button"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:text="âˆ©"
        android:textSize="80dp"
        android:gravity= "top|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="30dp"
        android:layout_above="@+id/push_button"
        android:textStyle="bold"
        android:textColor="@color/com_facebook_share_button_text_color"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"/>

</RelativeLayout>
