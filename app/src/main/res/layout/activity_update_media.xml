<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mohammadsharif.com.intersect.UpdateMediaActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:id = "@+id/facebook_button"
        android:src = "@drawable/facebooklogo"/>
    
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id ="@+id/text1"
        android:gravity="center"
        android:centerVertical = "true"
        android:layout_marginLeft="39dp"
        android:text = "Username"
        android:layout_toRightOf="@+id/facebook_button"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="true"
        android:textStyle="italic"
        android:background="@drawable/rectangle"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/facebook_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:id = "@+id/twitter_button"
        android:src = "@drawable/twitterlogo"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id ="@+id/text2"
        android:gravity="center"
        android:centerVertical = "true"
        android:layout_marginLeft="42dp"
        android:text = "Username"
        android:layout_below = "@+id/text1"
        android:layout_toRightOf="@+id/twitter_button"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="true"
        android:textStyle="italic"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
