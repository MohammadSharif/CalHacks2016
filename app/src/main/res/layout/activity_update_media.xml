<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mohammadsharif.com.intersect.UpdateMediaActivity"
                android:background="#292D36">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:id = "@+id/facebook_button"
        android:src = "@drawable/facebooklogo"/>


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/facebook_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:id = "@+id/twitter_button"
        android:src = "@drawable/twitterlogo"/>



    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/twitter_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id = "@+id/linkedin_button"
        android:src = "@drawable/linkedinlogo"/>



    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linkedin_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id = "@+id/instagram_button"
        android:src = "@drawable/instagramlogo"/>




    <Button
        android:id ="@+id/push_button"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:text="âˆ©"
        android:textSize="75dp"
        android:gravity= "top|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="30dp"
        android:layout_above="@+id/push_button"
        android:textStyle="bold"
        android:textColor="@color/com_facebook_share_button_text_color"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editText1"
        android:paddingLeft="15dp"
        android:layout_above="@+id/twitter_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_width="250dp"/>

    <EditText
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editText2"
        android:paddingLeft="15dp"
        android:layout_above="@+id/twitter_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_width="250dp"
        android:singleLine="false"
        android:outlineProvider="bounds"
        android:background="@color/white"/>

    <EditText
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editText"
        android:paddingLeft="15dp"
        android:layout_width="250dp"
        android:layout_above="@+id/linkedin_button"
        android:layout_alignStart="@+id/editText1"
        android:background="@color/white"/>

    <EditText
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editText3"
        android:paddingLeft="15dp"
        android:layout_width="250dp"
        android:layout_alignBottom="@+id/instagram_button"
        android:layout_alignStart="@+id/editText"
        android:background="@color/white"
        android:layout_height="35dp"/>

    <EditText
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editText4"
        android:paddingLeft="15dp"
        android:layout_width="250dp"
        android:layout_above="@+id/instagram_button"
        android:layout_alignStart="@+id/editText3"
        android:background="@color/white"/>

</RelativeLayout>
